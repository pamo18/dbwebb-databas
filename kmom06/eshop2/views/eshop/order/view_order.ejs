<%- include("../header", {title: title}); %>

<h1>Order <%= order %> details</h1>

<pre><%#= JSON.stringify(res, null, 4) %></pre>

<p>Order status: <%= res[0].order_status %> </p>
<p>Order last updated: <%= res[0].updated %> </p>
<p>Customer ID: <%= res[0].kund_id %> </p>
<p>Name: <%= res[0].kund_namn %> </p>
<p>This order contians the following products</p>
<table>
    <tr>
        <th>Products</th>
        <th>Quantity</th>
    </tr>
<% for (const row of res) { %>
    <tr>
        <td class="center"><%= row.product_name %></td>
        <td class="center"><%= row.kvantitet %></td>

    </tr>
<% }; %>
</table>

<p><a href="/eshop/order/build/<%= order %>">Add products <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></p>

<%- include("../footer"); %>
